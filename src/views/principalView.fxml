<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane 
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="manager.PrincipalViewController"
    prefWidth="600" prefHeight="600">
    <top>
        <Label text="Inventario de Productos" style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ListView fx:id="listView" prefHeight="200" />
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Concentración:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtConcentracion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Fecha Vencimiento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateVencimiento" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Tipo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboTipo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Advertencia:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAdvertencia" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Etiqueta ecológica:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEtiqueta" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                
            </GridPane>

            <HBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Button text="Agregar" onAction="#onAgregar"/>
                <Button text="Modificar" onAction="#onModificar"/>
                <Button text="Eliminar" onAction="#onEliminar"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>